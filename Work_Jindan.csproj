<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>TRACE</DefineConstants>
    <Optimize>true</Optimize>
  </PropertyGroup>

  <Target Name="BuildNodeApp" BeforeTargets="Build">
    <Exec Command="npm install --legacy-peer-deps" ContinueOnError="false" />
    <Exec Command="npm run build" ContinueOnError="false" />
  </Target>

  <Target Name="BuildElectronApp" AfterTargets="Build">
    <Exec Command="npm run dist-with-build" ContinueOnError="false" />
  </Target>

</Project>
